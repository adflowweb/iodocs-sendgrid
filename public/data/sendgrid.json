{
   "endpoints":[
      {
         "name":"Web API",
         "methods":[
            {
               "MethodName":"Mail",
               "Synopsis":"Sends a message to one recipient",
               "HTTPMethod":"GET",
               "URI":"/mail.send.json",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"to",
                     "Required":"Y",
                     "Default":"",
                     "Type":"email",
                     "Description":"Valid email address of receipient"
                  },
                  {
                     "Name":"toname",
                     "Required":"N",
                     "Default":"",
                     "Type":"string",
                     "Description":"Given name of the recipient"
                  },
                  {
                     "Name":"from",
                     "Required":"Y",
                     "Default":"",
                     "Type":"email",
                     "Description":"Valid email address of sender"
                  },
                  {
                     "Name":"fromname",
                     "Required":"N",
                     "Default":"",
                     "Type":"string",
                     "Description":"Given name of the sender"
                  },
                  {
                     "Name":"subject",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Subject of the email"
                  },
                  {
                     "Name":"text",
                     "Required":"Y",
                     "Default":"",
                     "Type":"string",
                     "Description":"Body of the email"
                  }
               ]
            },
            {
               "MethodName":"Blocks (GET)",
               "Synopsis":"Retrieve a list of Blocks with addresses and response codes",
               "HTTPMethod":"GET",
               "URI":"/blocks.get.:format",
               "RequiresOAuth":"N",
               "parameters":[
                  {
                     "Name":"date",
                     "Required":"N",
                     "Default":"1",
                     "Type":"int",
                     "Description":"Retrieve timestamp of the Block records in YYYY-MM-DD HH:MM:SS format"
                  },
                  {
                     "Name":"format",
                     "Required":"N",
                     "Default":"json",
                     "Type":"enumerated",
                     "EnumeratedList":[
                        "json",
                        "xml"
                     ],
                     "Description":"Response format"
                  }
               ]
            }
         ]
      }
   ]
}
